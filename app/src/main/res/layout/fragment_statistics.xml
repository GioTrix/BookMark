<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.statistics.StatisticsFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_notes"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/titillium_web"
                android:padding="12dp"
                android:text="@string/ToolBar"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_back_to_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/baseline_arrow_back_ios_new_24"
            android:gravity="start"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_ann_titolo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/titillium_web_bold"
                android:text="Statistiche"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvClassifica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/titillium_web_bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Classifica migliori lettori"
        tools:ignore="HardcodedText" />
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chartBooksRead"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/tvBooksRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/titillium_web"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Libri letti: 10"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/tvQuotesAnnotated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/titillium_web"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Frasi celebri annotate: 25"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvStatsGenere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/titillium_web"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Genere preferito: Romanzo"
        tools:ignore="HardcodedText" />
</LinearLayout>